{
  "manifest_version": 3,
  "name": "AI Text Assistant",
  "version": "1.1",
  "description": "AI-powered text assistant for Chrome",
  "permissions": [
    "activeTab",
    "scripting",
    "aiLanguageModelOriginTrial",
    "sidePanel",
    "storage",
    "contextMenus",
    "offscreen"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://www.youtube.com/*",
    "https://www.youtranscripts.com/*",
    "file:///*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/*", "permission-helper.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
  "default_title": "WriteBee Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": [
        "modules/markdown.js",
        "modules/aiService.js",
        "modules/ai.js",
        "modules/multimodal.js",
        "modules/dialog.js",
        "modules/whatsapp.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "match_origin_as_fallback": true,
      "js": [
        "modules/markdown.js",
        "modules/aiService.js",
        "modules/ai.js",
        "modules/multimodal.js",
        "modules/languageDetector.js",
        "modules/proofreaderService.js",
        "modules/grammarChecker.js",
        "modules/ocr.js",
        "modules/promptLibrary.js",
        "modules/pdf.js",
        "modules/ragEngine.js",
        "modules/webChat.js",
        "modules/microphonePermission.js",
        "modules/imageActions.js",
        "modules/dialog.js",
        "modules/actions.js",
        "modules/toolbarConfig.js",
        "modules/menus.js",
        "modules/toolbar.js",
        "modules/floatButton.js",
        "modules/floatButtons.js",
        "modules/gmail.js",
        "modules/outlook.js",
        "modules/youtube.js",
        "modules/google.js",
        "modules/github.js",
        "modules/linkedin.js",
        "modules/twitter.js",
        "content.js"
      ],
      "css": ["styles.css"]
    }
  ]
}
